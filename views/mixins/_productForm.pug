mixin productForm(product = {})
    form(action="/addProduct" method="POST" class="card")
        label(for="name") Name
        input(type="text" name="name" value=selectedProduct.name)
        label(for="description") Description
        textarea(name="description")= selectedProduct.description
        label(for="price") Price 
        input(type="number" min="0.01" max="2500" step="0.01" name="price")
        - const options = ['Bulk', 'Link', 'Brat']
        - const selectedOptions = selectedProduct.options || []
        label(for="option") Options: 
        ul.tags 
            each option in options 
                .tag.tag__choice
                    input(type="checkbox" id=option value=option name="options")
                    label(for=option) #{option}
        input(type="submit" value="Save" class="button")